/* pages/detail/childs/z-paramInfo/z-paramInfo.wxss */

.param-info {
  margin-top: 10rpx;
  padding: 20rpx;
  border-bottom: 12rpx solid #f2f2f2;
}

.param-info .title {
  font-size: 32rpx;
  text-align: center;
}

.size-row {
  height: 84rpx;
  line-height: 84rpx;
  font-size: 32rpx;
  padding: 10rpx;
  display: flex;
  border-bottom: 2rpx solid #f2f2f2;
}

.size-item {
  flex: 1;
  margin-left: 30rpx;
}

.info-row {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  padding: 10rpx;
  display: flex;
  border-bottom: 2rpx solid #f2f2f2;
}

.key {
  margin-left: 30rpx;
  width: 160rpx;
}

.value {
  color: #f55777;
  overflow: hidden;
}

.disclaimer {
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  padding: 10rpx;
  font-size: 32rpx;
}

.disclaimer .line {
  width: 180rpx;
  height: 1px;
  background: #666;
  margin: 10rpx 0;
  position: relative;
}

.disclaimer .end {
  float: right;
}

.disclaimer .desc {
  padding: 20rpx;
}

.disclaimer .start::before, .disclaimer .end::after {
  content: "";
  width: 10rpx;
  height: 10rpx;
  background-color: #666;
  position: absolute;
}

.disclaimer .start::before {
  bottom: 0;
}

.disclaimer .end::after {
  bottom: 0;
  right: 0;
}
