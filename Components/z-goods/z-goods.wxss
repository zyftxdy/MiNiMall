/* Components/z-goods/z-goods.wxss */
.goods{
  display: flex;
  flex-flow: wrap;
  justify-content: space-around;
}
.goods-item{
  width: 48%;
  padding-bottom: 20rpx;
}
.goods-item image{
  width: 100%;
  border-radius: 10rpx;
}
.goods-item .desc-info{
    font-size: 28rpx;
    position: relative;
    bottom: 5px;
    top: 5px;
    left: 0;
    right: 0;
    overflow: hidden;
    text-align: center;
}
.goods-item .desc-info .title{
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    margin-bottom: 6rpx;
}
.goods-item .desc-info .price{
  color: #ff5777;
  margin-right: 20rpx;
}
.goods-item .desc-info .icon{
  width: 30rpx;
  height: 30rpx;
  padding: 0 6rpx 0 10rpx;
  position: relative;
  top:4rpx;
}
.goods-item .desc-info .cfav{
  position: relative;
  top: -1rpx;
}