/* pages/detail/childs/z-baseInfo/z-baseInfo.wxss */
.baseInfo{
  margin-top: 15rpx;
  font-size: 32rpx;
  padding: 10rpx;
  border-bottom: 10rpx solid #f2f2f2;
}
.baseInfo .title{
  font-weight: 500;
}
.baseInfo .price{
  margin-top: 10rpx;
}
.price .new-price{
  color: #ff5777;
  margin-left: 10rpx;
}
.old-price{
  margin-left: 20rpx;
  font-size: 28rpx;
  text-decoration: line-through;
}
.discount {
  background: #ff5777;
  color: #fff;
  margin-left: 16rpx;
  padding: 6rpx 6rpx;
  font-size: 24rpx;
  border-radius: 16rpx;
  position: relative;
  bottom: 12rpx;
}
.sell-info{
  display: flex;
  justify-content: space-between;
  text-align: center;
  font-size: 26rpx;
  margin-top: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 10rpx solid #F8F8F8;
}
.extra{
  font-size: 28rpx;
  padding: 10rpx;
  display: flex;
  text-align: center;
  border-bottom: 10rpx solid #F8F8F8;
}
.extra text{
  font-size: 32rpx;
}
.sendAddress{
  text-align: center;
  margin-left: 30rpx;
}
.sendAddress image{
  width: 36rpx;
  height: 36rpx;
}
.sendAddress text{
  font-size: 28rpx;
  position: relative;
  top: -5rpx;
}
.deliveryTime::before{
  margin: 0 20rpx;
  content: "";
  width: 20rpx;
  border: 1px solid #f2f2f2;
}
.service {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  padding: 30rpx 0;
}

.service .icon {
  width: 24rpx;
  height: 24rpx;
  position: relative;
  top: 2rpx;
  right: 6rpx;
}

.service-item {
  text-align: center;
}